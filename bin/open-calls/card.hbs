{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}}'>
        <a target="_blank" href="{{website}}" rel="noopener">
            <span class="cat-name hidden">{{createClass name}}</span>
            <img decoding="async" class="gridElementLogo" src="{{img}}">
        </a>
        <div class="gridElementTextContainer">
            <a target="_blank" href="{{website}}" rel="noopener">
                <div class="label-location">
                    <h3>{{city}}</h3>
                    {{#if country}}
                        <img decoding="async"  alt='{{country}}' class='flag' src='{{flag}}' loading='lazy' />
                    {{/if}}
                </div>
                <h4 class="excerpt-rd">{{content}}</h4>
                <h4 class="excerpt-rd">{{type}}</h4>
            </a>
            {{#if (gt domain.length 0)}}
                <div class='chip-domain'>
                    <ul class='chips'>
                    {{#each domain}}
                        <li>{{this}}</li>
                    {{/each}}
                    </ul>
                    <span class='chips-gradient'></span>
                </div>
            {{/if}}
            <div>
                <a target="_blank" href="{{website}}" rel="noopener">
                    <h3 class="grant">{{grant}}</h3>
                    <h3 class="closeDate">{{formatDate closeDate}}</h3>
                </a>
            </div>

            <div class='foot'>
                {{#if (eq type "Closed")}}
                <a class='cat-details-primary' target="_blank" href="{{website}}" rel="noopener">
                    <span class="material-symbols-outlined">info</span>
                    Closed
                </a>
                {{/if}}
                {{#if (eq type "Open")}}
                <a class='cat-details' target="_blank" href="{{website}}" rel="noopener">
                    <span class="material-symbols-outlined">info</span>
                    More Info
                </a>
                {{/if}}
            </div>
        </div>
    </div>
{{/each}}