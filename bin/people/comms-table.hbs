<table class="table-people">
    <tr class="thead">
        <th>Name</th><th>Job Title</th><th>eMail</th><th>LinkedIn</th>
    </tr>
{{#each this}}
    {{#if (eq department 'Comms Team')}}
    <tr>
        <td>{{title}}{{name}}</td><td>{{job}}</td>
        <td>
        {{#if email}}
        <div class="cat-email">
        <a target='_blank' href='{{email}}' rel='noopener'>
            <span class='icon email'></span>
        </a>
        </div>
        {{/if}}
        </td>
        <td>
        {{#if linkedIn}}
        <div class="cat-linkedin">
        <a target='_blank' href='{{linkedIn}}' rel='noopener'>
            <span class='icon linkedin'></span>
        </a>
        </div>
        {{/if}}
        </td>
    </tr>
    {{/if}}
{{/each}}
</table>