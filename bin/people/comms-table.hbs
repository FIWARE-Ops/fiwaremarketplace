<div class="list-people">
    <div class="lp-head">
        <div>Name</div><div>Job Title</div><div>eMail</div><div>LinkedIn</div>
    </div>
{{#each this}}
    {{#if (eq department 'Comms Team')}}
    <div class="lp-item-container">
        <img alt='' class='lp-item-pic' src='{{img}}' loading='lazy' />
        <div class="lp-item-name">{{title}}{{name}}</div>
        <div class="lp-item-role">{{job}}</div>
        <div class="lp-item-icons">
            {{#if email}}
            <div class="cat-email">
            <a target='_blank' href='{{email}}' rel='noopener'>
                <span class='icon email'></span>
            </a>
            </div>
            {{/if}}
            </td>
            <td>
            {{#if linkedIn}}
            <div class="cat-linkedin">
            <a target='_blank' href='{{linkedIn}}' rel='noopener'>
                <span class='icon linkedin'></span>
            </a>
            </div>
            {{/if}}
        </div>
    </div>
    {{/if}}
{{/each}}
</div>