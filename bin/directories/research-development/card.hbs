{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domains}} {{createClass country}}  {{createClass year}}'>
        <span class="year hidden">{{year}}</span>
        <a href="./project?id={{createClass name}}">
            <div class="thumb">
                <img class="project-logo" src="{{img}}" {{#if (gt @index 9)}}loading="lazy"{{/if}}/>
            </div>
        </a>
        <div class="gridElementTextContainer">
            <a href="./project?id={{createClass name}}">
                <h6 class="cat-name">{{name}}</h6>
                <h4 class="excerpt-rd">{{excerpt}}</h4>
            </a>
            {{#if (gt domains.length 0)}}
            <div class='chip-domain'>
                <ul class='chips'>
                {{#each domains}}
                    <li>{{this}}</li>
                {{/each}}
                </ul>
                <span class='chips-gradient'></span>
            </div>
            {{/if}}

            <div class="icons">
                {{#if contacts}}
                <div class="materials">
                     {{#if website}}
                    <a class="cat-website" target="_blank" href="{{website}}" rel="noopener">
                        <span class="icon website"></span>
                    </a>
                    {{/if}}    
                    {{#if twitter}}
                        <a class='cat-twitter' target='_blank' href='{{twitter}}' rel='noopener'>
                            <span class='icon twitter'></span>
                        </a>
                    {{/if}}
                    {{#if linkedIn}}
                        <a class='cat-linkedin' target='_blank' href='{{linkedIn}}' rel='noopener'>
                            <span class='icon linkedin'></span>
                        </a>
                    {{/if}}
                </div>
                {{/if}}
                <img class='flag' src="{{flagUrl}}" alt="{{country}}" {{#if (gt @index 9)}}loading="lazy"{{/if}}/>
            </div>
        </div>

    </div>
{{/each}}
