<div class="list-directory">
    <div class="ld-head">
            <div class="ld-publication-name">Title</div>
            <div class="ld-date">Date</div>
            <div class="ld-item-topic">Topic</div>
    </div>
    {{#each this}}
        <div class="ld-item-container">
            <div class="ld-publication-name">{{title}}</div>
            <div class="ld-date">{{date}}</div>
            <div class="ld-item-topic">
                <div class="chip">{{topic}}</div>
            </div>
            <div class="ld-icons-container">
                {{#if news}}
                <a target='_blank' href='{{news}}' rel='noopener'>
                    <div class="list-icon">
                    <span class="material-symbols-outlined regular">visibility</span>
                    </div>
                </a>
                {{/if}}
                {{#if article}}
                <a target='_blank' href='{{article}}' rel='noopener'>
                    <div class="list-icon">
                    <span class="material-symbols-outlined regular">description</span>
                    </div>
                </a>
                {{/if}}
            </div>
        </div>
    {{/each}}
</div>
