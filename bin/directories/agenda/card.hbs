{{#each this}}


<div class='grid-item {{createClass track}} {{createClass session}}{{#each speakers}} {{createClass name}}{{/each}} {{createClass shortDate}}'>
    <div class="gridElementTextContainer{{#if moderator}} moderator{{/if}}">
      <a href="./{{#if description}}program{{else}}program-details-summary{{/if}}?id={{createClass title}}">
        <div class="chip-track">
          <div class="track {{trackColor}}">{{track}}</div>
        </div>
        <p class="panel-title">{{title}}</p> 
        <span class="excerpt">{{session}}</span>
        <div class="panel-info">
          <div class="date-time">
            <h3 class="date">{{shortDate}}</h3>
            <span class="separator-dot"></span>
            <span class="time">{{start}} â€“ {{end}}</span>
          </div>
          <span class="separator-dot"></span>
          <span class="place">{{location}}</span>
        </div>
      </a>
    </div>
    <div class="speakers-container{{#if moderator}} moderator{{/if}}">
      {{#if moderator}} 
      <div class="moderated-by">
        Session moderated by
      </div>
      {{/if}}
      <div class="speakers">
        {{#each speakers}}
        <div class="speaker" {{#if shortJob}}data-modal='{{createClass name}}'{{/if}}>
          <div class="profile-picture">
            {{#if img}}
            <img decoding="async" alt="{{name}}" src="{{img}}" loading="lazy">
            {{else}}
            <img decoding="async" alt="" src="https://www.fiware.org/wp-content/directories/people/images/ico_user.png" loading="lazy">    
            {{/if}}
          </div>
          <div class="speaker-info">
            <div class="speaker-name">{{name}}</div>
            <div class="speaker-job-title">{{shortJob}}</div>
            <div class="speaker-company">{{company}}</div>
            <div class="btn-icon">
      				<span class="material-symbols-outlined icon cta small">trending_flat</span>
    				</div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="foot{{#if moderator}} moderator{{/if}}">
      <a class="btn-primary" href="./{{#if description}}program{{else}}program-details-summary{{/if}}?id={{createClass title}}">
        <span class="material-symbols-outlined">info</span>
        {{#if moderator}}
          Session details
        {{else}}
          See details
        {{/if}}
      </a>
    </div>
  </div>
{{/each}}
