{{#each months}}
  <div class='grid-item {{createClass title}} month-divider' data-month='{{@key}}'>
    <div class="gridElementSeparator">
      <h3>{{text}}</h3>
      <span class="month-divider"></span>
    </div>
  </div>
  {{#each events}}

    <div class='grid-item' data-id='{{yearMonth}}-{{createClass title}}' data-month='{{yearMonth}}' data-type="{{createClass type}}" data-domain="{{createClass category}}">
      <div class="event-date" data-from="{{formatISO startTime}}"
        data-to={{formatISO endTime}}>
        <h3 class="event-day">{{formatDay shortDateStart}}</h3>
        <h3 class="event-month">{{formatMonth shortDateStart}}</h3>
        {{#if (eq venueName '')}}
        <h3 class="online-event"{{#if (ne url '')}} data-url="{{onlineLink}}"{{/if}}{{#if (ne recording '')}} data-recording="{{recording}}"{{/if}}>Online</h3>
        {{/if}}
      </div>
      <div class="item-container">
        <div class="gridElementTextContainer">
          <div class='chip-type'>
            <ul class='chips'>
              <li>{{type}}</li>
            </ul>
          </div>
          <a href="./event-details/?id={{yearMonth}}-{{createClass title}}">
            <p class="panel-title">{{title}}</p> 
          </a>
          <!-- <div class="excerpt">{{excerpt}}</div> -->
          <div class='chip-domain'>
            <ul class='chips'>
              <li>{{category}}</li>
            </ul>
          </div>
          <div class="panel-info">
            {{#if (ne venueName '')}}
            <div class="location-container">
            <img alt='{{country}}' class='flag' src='{{flag}}' loading="lazy"/>
            <h3 class="city-name">{{city}}</h3>
            </div>
            <span class="place">{{venueName}}</span>
            {{/if}}
            {{#if (ne start '')}}
            <div class="date-time">
              <span class="time">{{start}} â€“ {{end}}</span>
            </div>
             {{/if}}
          </div>
          <div class="speakers">
            {{#each speakers}}
            <div class="speaker" {{#if shortJob}}data-modal='{{createClass name}}'{{/if}}>
              <div class="profile-picture">
                {{#if img}}
                <img decoding="async" alt="{{name}}" src="{{img}}" loading="lazy">
                {{else}}
                <img decoding="async" alt="" src="https://www.fiware.org/wp-content/directories/people/images/ico_user.png" loading="lazy">    
                {{/if}}
              </div>
              <div class="speaker-info">
                <div class="speaker-name">{{name}}</div>
                <div class="speaker-job-title">{{shortJob}}</div>
                <div class="speaker-company">{{{multiline company}}}</div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
          <div class="gridElementLogo" >
            <a href="./event-details/?id={{yearMonth}}-{{createClass title}}">
              <img class="event-image" src="{{img}}"/>
            </a>
          </div>
      </div>
    </div>
  {{/each}}
{{/each}}