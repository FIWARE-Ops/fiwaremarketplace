<div class="search-sort-container">
    <div class="empty-container"></div>
    <div class="search-element">
        <div class="resetInput"></div>
        <input type="search" id="searchInput" placeholder="Search">
    </div>
    <div class="toggle-views">
        <input id="toggle-on" class="toggle toggle-left" name="toggle" value="list-view" type="radio" checked>
        <label for="toggle-on" class="btn-toggle-view">List</label>
        <input id="toggle-off" class="toggle toggle-right" name="toggle" value="calendar" type="radio">
        <label for="toggle-off" class="btn-toggle-view">Calendar</label>
    </div>
</div>

<div class='dropdown-container'>
    <div class='filter-element'>
        <label for='filterMonth' class='dropdown-label'>Months</label>
        <select id='filterMonth'>
            {{#each months}}
                <option value='{{@key}}'>{{text}}</option>
            {{/each}}
        </select>
    </div>
    <div class='filter-element'>
        <label for='filterType' class='dropdown-label'>Type</label>
        <select id='filterType'>
            <option value='*'>All types</option>
            {{#each types}}
                <option value='{{createClass this}}'>{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div class='filter-element'>
        <label for='filterDomain' class='dropdown-label'>Category</label>
        <select id='filterDomain'>
            <option value='*'>All categories</option>
            {{#each categories}}
                <option value='{{createClass this}}'>{{this}}</option>
            {{/each}}
        </select>
    </div>
</div>