{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}} {{createClass language}}'>
        <a href="{{website}}" target="_blank" href="{{website}}" rel="noopener">
            <div class="gridElementLogoContainer">
                <picture>
                   <source srcset="{{webp img}}" type="image/webp"/>
                   <img class="gridElementLogo" src="{{img}}" loading="lazy"/>
                </picture>
            </div>
        </a>    
        <div class="gridElementTextContainer">
            <a href="{{website}}" target="_blank" rel="noopener">
                <div class="label-location">
                    <h3>{{type}}</h3>
                </div>
                <h6 class="cat-name">{{name}}</h6>
             </a>
            {{#if (gt domain.length 0)}}
                <div class='chip-domain'>
                    <ul class='chips'>
                    {{#each domain}}
                        <li>{{this}}</li>
                    {{/each}}
                    </ul>
                    <span class='chips-gradient'></span>
                </div>
            {{/if}}

            <div class="icons">
                {{#if language}}
                <img alt='{{language}}' class='flag' src='{{flagUrl}}' loading='lazy' {{#if (gt @index 9)}}loading="lazy"{{/if}} />
                {{/if}}
            </div>
        </div>
    </div>
{{/each}}