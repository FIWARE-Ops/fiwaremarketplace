{{#each this}}
    <div class="grid-item  {{createClass type}} {{createClasses domain}} {{createClass country}}">
        <a href="./city-details?id={{createClass city}}">
            <img class="gridElementLogo" src="{{thumb}}"  
            loading="lazy">
        </a>
        <div class="gridElementTextContainer">
            <a href="./city-details?id={{createClass city}}">
            <div class="label-location">
                <h3>{{country}}</h3>
                <img alt="{{Country}}" class="flag" alt="{{country}}"src="{{flag}}" loading="lazy">
            </div>
            <h6 class="cat-name">{{city}}</h6>
            </a>
            <div class="icons">
                <a class="cat-website" target="_blank" href="{{cityWebsite}}" rel="noopener">
                    <span class="icon website"></span>
                </a>
            </div>
        </div>
    </div>
{{/each}}