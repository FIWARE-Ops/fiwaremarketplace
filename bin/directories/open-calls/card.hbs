{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}}'>
        <a target="_blank" href="{{website}}" rel="noopener">
            <span class="cat-name hidden">{{createClass name}}</span>
            <img class="gridElementLogo" src="{{img}}" {{#if (gt @index 9)}}loading="lazy"{{/if}}>
        </a>
        <div class="gridElementTextContainer">
            <a target="_blank" href="{{website}}" rel="noopener">
                <h4 class="excerpt-rd">{{content}}</h4>
                <h4 class="oc-status">{{type}}</h4>
            </a>
            {{#if (gt domain.length 0)}}
                <div class='chip-domain'>
                    <ul class='chips'>
                    {{#each domain}}
                        <li>{{this}}</li>
                    {{/each}}
                    </ul>
                    <span class='chips-gradient'></span>
                </div>
            {{/if}}

            <div class="oc-attributes">
               <div class="oc-attribute">
                 <span class="material-symbols-outlined">payments</span>
                 <h3 class="grant">{{grant}}</</h3>
               </div>
               <div class="oc-attribute">
                 <span class="material-symbols-outlined">event</span>
                 <h3 class="closeDate {{createClass type}}"{{#if (eq type 'Open')}} data-close-date="{{parseDate closeDate}}"{{/if}}> {{formatDate closeDate}}</h3>
               </div>
            </div>

            <div class='icons'>
                <a class='cat-details-primary {{createClass type}}' target="_blank" href="{{website}}"{{#if (eq type 'Open')}} data-close-date="{{parseDate closeDate}}"{{/if}} rel="noopener">
                    {{#if (eq type "Closed")}}
                        <span class="material-symbols-outlined">warning</span>
                        CLOSED
                    {{/if}}
                    {{#if (eq type "Open")}}
                        <span class="material-symbols-outlined">open_in_new</span>
                        Apply
                {{/if}}
                </a>
            </div>
        </div>
    </div>
{{/each}}