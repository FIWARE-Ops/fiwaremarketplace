<div class="showFilters">
    <div id="mobileToggleFilters">
      <span id="ico-filtersbar" class="material-symbols-outlined">filter_alt</span>
      <span id="filter-button-text">Show Filters</span>
    </div>
  </div>

  <div class="filters-container">
    <div class="search-element">
      <div class="resetInput"></div>
      <input type="search" id="searchInput" placeholder="Search">
    </div>
    <div class="date-picker">
      <p class="filter-by">
        September 2024
      </p>
      <div class="filters-checkbox">
        <div id="date" class="filter-element">
          <input type="checkbox" name="fiwareMember" id="fiwareMember">
          <label for="fiwareMember">18</label>
        </div>
        <div id="date" class="filter-element">
          <input type="checkbox" name="fiwareiHub" id="fiwareiHub">
          <label for="fiwareiHub">19</label>
        </div>
      </div>
    </div>
    <div class="filter-element">
      <select name="" id="filterType">
        <option value="*">Tracks</option>
        {{#each types}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
        
      </select>
    </div>
    <div class="filter-element">
      <select name="" id="filterDomain">
        <option value="*">Sessions</option>
         {{#each domains}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
      </select>
    </div>
    <div class="filter-element">
      <!-- <label class="dropdown-label">Technology</label> -->
      <select name="" id="filterTechnology">
        <option value="*">Speakers</option>
         {{#each technologies}}
                {{#if (ne this '')}}
                    <option value='{{createClass this}}'>{{this}}</option>
                {{/if}}
            {{/each}}
      </select>
    </div>
  </div></div>