{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}} {{createClasses technology}}'>
        <div class='gridElementLogo'>
            <img src='{{img}}' alt='' loading='lazy' />
        </div>
        <div class='gridElementTextContainer'>
            <p class='solution-name'>{{name}}</p>
            <div class='company-certified'>
                <div class='label-certification'>
                    {{#if (eq type 'Core Context')}}
                        <img src="https://www.fiware.org/style/imgs/Badges/Badge_FIWARE_Core.svg"
                        style="height:24px;margin-right:10px"/>
                    {{/if}}
                    {{#if (eq type 'Cross-Chapter')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'Data Monetization')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'Fundamentals')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'IoT Agents')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'Operations')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'Processing')}}
                         {{type}}&nbsp;
                    {{/if}}
                    {{#if (eq type 'Robotics')}}
                           <img src="https://www.fiware.org/style/imgs/Badges/Badge_FIWARE_Robotics.svg"
                        style="height:24px;margin-right:10px"/>
                    {{/if}}
                     {{#if (eq type 'Security')}}
                         <img src="https://www.fiware.org/style/imgs/Badges/Badge_FIWARE_Security.svg"
                        style="height:24px;margin-right:10px"/>
                    {{/if}}
                    {{#if (eq type 'Visualisation')}}
                         {{type}}&nbsp;
                    {{/if}}
                    <span class='name hidden'>{{difficulty}}</span>
                    <h3>{{rating difficulty}}</h3>
                </div>
                <div class='label-certification'>
                    First Broadcast:
                    <span class='year'>{{year}}</span></div>
            </div>

        </div>
        <div class='gridElementTechnologyDomain'>
            <div class='chip-technology-domain'>
                <div class='chip-technology'>
                    <p class='label-card'>Keywords</p>
                    <ul class='chips'>{{#each technology}}<li>{{this}}</li>{{/each}}</ul>
                    <span class='chips-gradient'></span>
                </div>
                <div class='chip-domain'>
                    <p class='label-card'>Audience</p>
                    <ul class='chips'>{{#each domain}}<li>{{this}}</li>{{/each}}</ul>
                    <span class='chips-gradient'></span>
                </div>
            </div>
        </div>
        <div class='gridElementTechnologyDomain'>
            <div class='excerpt'>{{{content}}}</div>
        </div>
        <div class='foot'>
            <a class='cat-bio' data-modal='{{@index}}'>
                <span class="material-icons-outlined">info</span>
                More Info
            </a>
            <a class='details' href="{{companyLink}}">
                <span class='material-icons-outlined'>play_arrow</span>
                Watch
            </a>
        </div>
    </div>
{{/each}}