{{#each this}}
    <div class='grid-item {{createClass type}} {{createClasses domain}} {{createClass language}}'>
        <a href="{{website}}">
            <img decoding="async" class="gridElementLogo" src="{{img}}">
        </a>    
        <div class="gridElementTextContainer">
            <a href="{{website}}" target="_blank" >
                <div class="label-location">
                    <h3>{{type}}</h3>
                </div>
                <h6 class="cat-name">{{name}}</h6>
             </a>
            {{#if (gt domain.length 0)}}
                <div class='chip-domain'>
                    <ul class='chips'>
                    {{#each domain}}
                        <li>{{this}}</li>
                    {{/each}}
                    </ul>
                    <span class='chips-gradient'></span>
                </div>
            {{/if}}

            <div class="icons">
                {{#if language}}
                <img decoding="async" alt='{{language}}' class='flag' src='{{flag}}' loading='lazy' />
                {{/if}}
            </div>
        </div>
    </div>
{{/each}}