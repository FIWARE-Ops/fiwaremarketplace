<div class="list-directory">
    <div class="ld-head">
            <div class="ld-publication-name">Name</div>
            <div class="ld-type">Type</div>
            <div class="ld-domain">Domain</div>
    </div>
    {{#each this}}
        <div class="ld-item-container">
            <div class="ld-publication-name">{{name}}</div>
            <div class="ld-type">{{type}}</div>
            <div class='chip-domain'>
                <ul class='chips'>
                {{#each domain}}<li>{{this}}</li>{{/each}}
                </ul>
            </div>
            <div class="ld-icons-container">
                {{#if output}}
                <a target='_blank' href='{{output}}' rel='noopener'>
                    <div class="list-icon">
                    <span class="material-symbols-outlined regular">visibility</span>
                    </div>
                </a>
                {{/if}}
                {{#if source}}
                <a target='_blank' href='{{source}}' rel='noopener'>
                    <div class="list-icon">
                    <span class="material-symbols-outlined regular">design_services</span>
                    </div>
                </a>
                {{/if}}
            </div>
        </div>
    {{/each}}
</div>
