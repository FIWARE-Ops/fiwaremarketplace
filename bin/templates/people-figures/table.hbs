<div class="list-directory">
    <div class="ld-head">
            <div class="ld-item-name">Figure</div>
            <div class="ld-item-value">Value</div>
            <div class="ld-item-owner">Owner</div>
            <div class="ld-item-source">Source</div>
    </div>
    {{#each this}}
        <div class="ld-item-container">
            <div class="ld-figure-name">{{name}}</div>
            <div class="md-value--small">{{value}}</div>
            {{#if owner}}
            <div class="ld-item-responsible">
                <img alt='' class='ld-item-pic' src='{{image}}' loading='lazy' />
                <div class="ld-item-name">{{owner}}</div>
            </div>
            {{/if}}
            {{#if source}}
            <a target='_blank' href='{{url}}' rel='noopener'>
                <div class="md-button md-button--secondary">
                {{source}}
                </div>
            </a>
            {{/if}}
        </div>
    {{/each}}
</div>
