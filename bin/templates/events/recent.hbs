{{#each this}}
    <div class='item' data-id='{{yearMonth}}-{{createClass title}}' data-category="{{#each category}}{{createClass this}}{{#unless @last}} {{/unless}}{{/each}}">
    	 <a class="story-details" href="./?id={{yearMonth}}-{{createClass title}}" rel="noopener">
        <div class='card card-story card-primary card-hover card-body light'>
            <div>
                <img decoding="async" class="hero-story" src="{{img}}" loading="lazy">
            </div>
            <div class="story-content">
                <h3 class="card-story-title">{{title}}</h3>
               </a>
            </div>
        </div>
    	</a>
    </div>
{{/each}}